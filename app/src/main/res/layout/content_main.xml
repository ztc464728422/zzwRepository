<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.test.zzw.zzwapp.activity.MainActivity">

    <Button
        android:id="@+id/btn_testpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testpage"/>
    <Button
        android:id="@+id/btn_tesdrawerlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_tesdrawerlayout"
        android:layout_below="@+id/btn_testpage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_below="@id/btn_tesdrawerlayout"
        android:id="@+id/btn_testmutilayiytadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试多样式列表"/>
    <Button
        android:layout_below="@id/btn_testmutilayiytadapter"
        android:id="@+id/btn_testbindservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试绑定服务"/>

    <Button
        android:layout_below="@id/btn_testbindservice"
        android:id="@+id/btn_aidl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试AIDL"/>
    <Button
        android:id="@+id/btn_com_aidl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试复杂对象AIDL"
        android:layout_below="@+id/btn_aidl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_below="@id/btn_com_aidl"
        android:id="@+id/btn_transact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试onTransact通信"/>
    <Button
        android:layout_below="@id/btn_transact"
        android:id="@+id/btn_sax_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sax解析xml"/>
    <Button
        android:layout_below="@id/btn_sax_xml"
        android:id="@+id/btn_dom_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="domx解析xml"/>
    <Button
        android:layout_below="@id/btn_dom_xml"
        android:id="@+id/btn_jni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jni"/>
    <Button
        android:layout_toRightOf="@id/btn_testpage"
        android:id="@+id/btn_databinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="databinding"/>

    <Button
        android:layout_toRightOf="@id/btn_tesdrawerlayout"
        android:id="@+id/btn_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxjava"/>

    <Button
        android:layout_toRightOf="@id/btn_tesdrawerlayout"
        android:layout_below="@id/btn_rxjava"
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tinker热更新"/>

    <TextView
        android:layout_toRightOf="@id/btn_tesdrawerlayout"
        android:layout_below="@id/btn_update"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample patch! 大于等于6.0，手动获取权限-更新后过后后再后后"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_rxjava"
        android:layout_alignRight="@+id/btn_rxjava"
        android:max="100"
        android:progress="45"
        android:layout_below="@+id/btn_testbindservice" />

    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@id/progressBar"
        android:id="@+id/btn_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ijkplayer"/>
</RelativeLayout>
